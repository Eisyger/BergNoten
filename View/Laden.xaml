<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BergNoten.View.Laden"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Laden PrÃ¼fungsdaten">

    <VerticalStackLayout Padding="20,10,20,100">

        <!--  Einleitungstext  -->
        <Label
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="{Binding Zeile1}"
            TextColor="DarkSlateGray"
            VerticalOptions="Center" />
        <Label
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="{Binding Zeile2}"
            TextColor="DarkSlateGray"
            VerticalOptions="Center" />

        <HorizontalStackLayout Margin="0,40,0,0" HorizontalOptions="Center">
            <Button
                Margin="0,0,10,0"
                Clicked="OnClickedLaden"
                HorizontalOptions="Center"
                Text="Lade Daten"
                WidthRequest="150" />

            <Button
                Margin="10,0,0,0"
                Clicked="OnClickedNeu"
                HorizontalOptions="Center"
                Text="Neu..."
                WidthRequest="150" />

        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>