<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BergNoten.View.Laden"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Laden PrÃ¼fungsdaten">

    <VerticalStackLayout Padding="20,10,20,100">

        <!--  Einleitungstext  -->
        <Label
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="{Binding Zeile1}"
            TextColor="DarkSlateGray"
            VerticalOptions="Center" />
        <Label
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="{Binding Zeile2}"
            TextColor="DarkSlateGray"
            VerticalOptions="Center" />

        <Button
            Margin="0,30,0,0"
            Clicked="OnClickedLaden"
            HorizontalOptions="Center"
            Text="Daten suchen..."
            WidthRequest="150" />
    </VerticalStackLayout>
</ContentPage>