<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BergNoten.View.Laden"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Laden Prüfungsdaten">

    <VerticalStackLayout>

        <!--  Einleitungstext  -->
        <ScrollView Padding="20">
            <Label
                FontSize="Medium"
                HorizontalOptions="Center"
                TextColor="DarkSlateGray"
                VerticalOptions="Center">
                Wähle die .xls Datei welche du von deinem Lehrgangasleiter bekommen hast.
                Solltest du bisher keine erhalten haben, so melde dich bei deinem Lehrgangsleiter!
            </Label>
        </ScrollView>

        <Button
            Clicked="OnClicked"
            Text="Suche .xls ..."
            WidthRequest="200" />

    </VerticalStackLayout>
</ContentPage>