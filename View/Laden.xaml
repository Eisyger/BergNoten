<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BergNoten.View.Laden"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Laden PrÃ¼fungsdaten"
    BackgroundColor="#F0F0F5">

    <VerticalStackLayout Padding="20,10,20,100">

        <!--  Einleitungstext  -->
        <Label
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="{Binding Zeile1}"
            TextColor="#808080"
            VerticalOptions="Center" />
        <Label
            FontSize="Small"
            HorizontalOptions="Center"
            Text="{Binding Zeile2}"
            TextColor="#808080"
            VerticalOptions="Center" />

        <!--  Button  -->
        <Button
            Margin="0,30,0,0"
            BackgroundColor="#3498DB"
            Clicked="OnClickedLaden"
            CornerRadius="10"
            HorizontalOptions="Center"
            Text="Daten suchen..."
            TextColor="White"
            WidthRequest="150" />
    </VerticalStackLayout>
</ContentPage>
