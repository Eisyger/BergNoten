<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BergNoten.View.Exportieren"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Exportieren"
    BackgroundColor="#F0F0F5">
    <VerticalStackLayout
        Margin="20"
        Padding="20"
        Spacing="20">
        <!--  Label für einen sekundären Text  -->
        <Label
            FontSize="Small"
            HorizontalOptions="Center"
            Text="Exportiert deine Noten in eine .xsl Datei. Sende diese an den Lehrgangsleiter."
            TextColor="#808080" />


        <!--  Einleitungstext (hier könnte z.B. ein Label hinzugefügt werden)  -->
        <Button
            Margin="0,30,0,0"
            BackgroundColor="#3498DB"
            Clicked="OnClickedExport"
            CornerRadius="10"
            HorizontalOptions="Center"
            Text="Daten exportieren..."
            TextColor="White"
            WidthRequest="200" />

    </VerticalStackLayout>
</ContentPage>
