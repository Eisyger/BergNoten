<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BergNoten.View.Mustervorlage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Mustervorlage"
    BackgroundColor="#F0F0F5">

    <VerticalStackLayout
        Margin="20"
        Padding="20"
        Spacing="20">
        <Label
            FontSize="Small"
            HorizontalOptions="Center"
            Text="{Binding Einleitungstext}"
            TextColor="#808080"
            VerticalOptions="Center" />

        <Button
            Margin="0,50,0,0"
            BackgroundColor="#3498DB"
            Clicked="OnClicked"
            CornerRadius="10"
            Text="Mustervorlage erstellen"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
