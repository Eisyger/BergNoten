<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BergNoten.View.Username"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Benutzer"
    BackgroundColor="#F0F0F5">

    <VerticalStackLayout
        Margin="20"
        Padding="20"
        Spacing="20">

        <!--  Frage-Label  -->
        <Label
            FontSize="Small"
            HorizontalOptions="Center"
            Text="Wie ist dein Name?"
            TextColor="#7F8C8D"
            VerticalOptions="Center" />

        <!--  Eingabefeld (Entry)  -->
        <Entry
            x:Name="nameEntry"
            Margin="0,0,0,10"
            BackgroundColor="#FFFFFF"
            Placeholder="Vor- und Nachname"
            PlaceholderColor="#BDBDBD"
            TextChanged="OnNameEntryTextChanged"
            TextColor="#333333" />

        <!--  Speichern-Button  -->
        <Button
            x:Name="nameButton"
            Padding="20,10"
            BackgroundColor="#3498DB"
            Clicked="OnNameButtonClicked"
            CornerRadius="10"
            Text="Speichern"
            TextColor="White" />


    </VerticalStackLayout>
</ContentPage>
