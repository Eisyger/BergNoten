<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BergNoten.View.Username"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Username"
    BackgroundColor="#F5F5F5"
    FlyoutItem.IsVisible="False"
    Shell.NavBarIsVisible="False">

    <VerticalStackLayout Margin="20" Spacing="20">
        <Label
            FontAttributes="Bold"
            FontSize="Header"
            HorizontalOptions="Center"
            Text="Berg Noten"
            VerticalOptions="Center" />

        <Label
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="Wie ist dein Name?"
            TextColor="#7F8C8D"
            VerticalOptions="Center" />

        <Entry
            x:Name="nameEntry"
            Margin="0,0,0,10"
            BackgroundColor="White"
            Placeholder="Vor- und Nachname"
            PlaceholderColor="#BDBDBD"
            TextChanged="OnNameEntryTextChanged"
            TextColor="#333333" />

        <Button
            x:Name="nameButton"
            Padding="20,10"
            BackgroundColor="#2980B9"
            Clicked="OnNameButtonClicked"
            CornerRadius="10"
            FontAttributes="Bold"
            IsEnabled="False"
            Text="Speichern"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>